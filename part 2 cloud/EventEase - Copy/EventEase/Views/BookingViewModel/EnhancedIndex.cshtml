using EventEase.Models;

@model IEnumerable<EventEase.Models.BookingViewModel>

@{
    ViewData["Title"] = "Manage Bookings";
}

<h1>Manage Bookings</h1>

<p>
    <a asp-action="Create">Create New Booking</a>
</p>

<form asp-action="EnhancedIndex" method="get">
    <div class="form-group">
        <label for="SearchTerm">Search by Booking ID or Event Name:</label>
        <input type="text" class="form-control" id="SearchTerm" name="SearchTerm" value="@ViewBag.SearchTerm" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="EnhancedIndex" class="btn btn-secondary">Clear Search</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>